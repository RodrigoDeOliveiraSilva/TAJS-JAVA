{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Attach to Node.js debug port",
            "request": "attach",
            "port": 9229,
            "type": "node",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/**/node_modules/**",
                "${workspaceFolder}/node_modules/**",
                "${workspaceFolder}/*/node_modules/**",
            ],
            "smartStep": true,
            "internalConsoleOptions": "openOnFirstSessionStart",
            "restart": true
        }
    ]
}